breach = branch
breanch = branch
checkotu = checkout
checkou = checkout
checout = checkout
cherrypick = cherry-pick
cloen = clone
comit = commit
comitt = commit
committ = commit
dif = diff
fetc = fetch
fethc = fetch
greo = grep
grp = grep
grpe = grep
hceckout = checkout
mereg = merge
merg = merge
puhs = push
rbanch = branch
stat = status
statis = status
stats = status
statsu = status
statsus = status
statu = status
statys = status
stauts = status
sttus = status
